

<section>
    <div class="container">
        <div class="row">
            {{#each products}}
            <div class="card mt-5 ml-2 col-md-2">
                <img class="card-img-top" height="50%" src="/product-images/{{this._id}}.jpg" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">{{this.Name}}</h5>
                    <p class="card-title">â‚¹ {{this.Price}}</p>
                    <p class="card-text">{{this.Description}}</p>
                    <button onclick="addToCart(&quot;{{this._id}}&quot;)" class="btn btn-success">Add to Cart</button>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</section>
